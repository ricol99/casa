{
   "name": "casa:cctv",
   "displayName": "Casa Collin CCTV System",
   "gang": "casa-collin",
   "parentCasa": {
      "name": "casa:internet",
      "address": {
         "hostname": "casa.elasticbeanstalk.com",
         "port": 80
      }
   },
   "listeningPort": 8081,
   "props": {},
   "things": [
      {
         "name": "thing:home-daylight-sensor",
         "displayName": "Home daylight sensor",
         "props": [
            {
               "name": "lightLevel",
               "initialValue": 100,
               "writable": false,
               "binder": {
                  "name": "orpropertybinder:light-level",
                  "sources": [
                     {
                        "source": "thing:test-cctv",
                        "sourceProperty": "test-prop-2",
                        "triggerCondition": "==",
                        "triggerValue": true,
                        "outputActiveValue": 30,
                        "outputInactiveValue": 100
                     }
                  ]
               }
            }
         ]
      },
      {
         "name": "thing:test-daylight-sensor",
         "displayName": "Test daylight sensor",
         "props": [
            {
               "name": "alarm-status",
               "initialValue": "white",
               "writable": false,
               "binder": {
                  "name": "orpropertybinder:test-flip-flop",
                  "sources": [
                     {
                        "source": "thing:test-cctv",
                        "sourceProperty": "test-prop-1",
                        "outputActiveValue": "green",
                        "outputInactiveValue": "white"
                     },
                     {
                        "source": "thing:home-daylight-sensor",
                        "sourceProperty": "lightLevel",
                        "triggerCondition": "<",
                        "triggerValue": 50,
                        "outputActiveValue": "red",
                        "outputInactiveValue": "blue"
                     }
                  ]
               }
            },
            {
               "name": "smallerLightLevel",
               "initialValue": 0,
               "writable": false,
               "binder": {
                  "name": "lineartransformpropertybinder:test-light-level-transform",
                  "inputMin": 0,
                  "inputMax": 100,
                  "outputMin": 10,
                  "outputMax": 0,
                  "source": "thing:home-daylight-sensor",
                  "sourceProperty": "lightLevel"
               }
            },
            {
               "name": "daylight",
               "initialValue": false,
               "writable": false,
               "binder": {
                  "name": "schedulepropertybinder:env-daylight",
                  "events": [
                     {
                        "rule": "sunrise",
                        "propertyValue": true
                     },
                     {
                        "rule": "sunset:-1800",
                        "propertyValue": false
                     }
                  ]
               }
            },
            {
               "name": "dark",
               "initialValue": false,
               "writable": false,
               "binder": {
                  "name": "schedulepropertybinder:env-daylight",
                  "events": [
                     {
                        "rule": "sunrise",
                        "propertyValue": false
                     },
                     {
                        "rule": "sunset:-1800",
                        "propertyValue": true
                     }
                  ]
               }
            }
         ]
      },
      {
         "name": "thing:test-cctv",
