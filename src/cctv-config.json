                     {
                        "rule": "0,5,10,15,20,25,30,35,40,45,50,55 * * * *",
                        "propertyValue": true
                     },
                     {
                        "rule": "3,8,13,18,23,28,33,38,43,48,53,58 * * * *",
                        "propertyValue": false
                     }
                  ]
               }
            },
            {
               "name": "latching-test-prop-2",
               "initialValue": false,
               "writable": false,
               "binder": {
                  "name": "latchingpropertybinder:latching-test-prop-2",
