                  {
                     "name": "off",
                     "timeout": { "duration": 45, "nextState": "on" }
                  },
                  {
                     "name": "on",
                     "sources": [ { "property": "test-periodic-1", "value": "on", "nextState": "on-others" },
                                  { "property": "test-periodic-1", "value": "on-others", "nextState": "on-others" } ],
                     "timeout": { "from": [ "on-off" ], "duration": 20, "nextState": "off" },
                     "actions": { "property": "test-prop-action", "value": false }
                  },
                  {
                     "name": "on-others",
                     "source": { "property": "test-periodic-1", "value": "off", "nextState": "on" },
                     "timeout": { "from": [ "on" ], "duration": 20, "nextState": "off" }
