                     "actions": [{ "property": "test-prop-action", "value": true }]
                  },
                  {
                     "name": "on-others",
                     "priority": 2,
                     "source": { "property": "test-periodic-2", "value": "off", "nextState": "on" },
                     "timeout": { "from": [ "on" ], "duration": 20, "nextState": "off" }
                  }
               ]
            },
            {
               "name": "test-periodic-4",
               "type": "stateproperty",
               "initialValue": "off",
